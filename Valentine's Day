<script>
  function playSound() {
    document.getElementById("clickSound").play();
  }

  function nextStep() {
    playSound();
    document.getElementById("step1").style.display = "none";
    document.getElementById("step2").style.display = "block";
  }

  function showLove() {
    playSound();
    document.getElementById("step2").style.display = "none";
    document.getElementById("loveMessage").style.display = "block";
    launchConfetti();
  }

  function runAway(btn) {
    const parent = btn.parentElement;
    const maxX = parent.offsetWidth - btn.offsetWidth;
    const maxY = parent.offsetHeight - btn.offsetHeight;

    const x = Math.random() * maxX;
    const y = Math.random() * maxY;

    btn.style.left = x + "px";
    btn.style.top = y + "px";
  }

  function launchConfetti() {
    for (let i = 0; i < 120; i++) {
      const confetti = document.createElement("div");
      confetti.innerHTML = Math.random() > 0.5 ? "â¤" : "âœ¨";
      confetti.style.position = "fixed";
      confetti.style.left = Math.random() * 100 + "vw";
      confetti.style.top = "-10px";
      confetti.style.fontSize = 16 + Math.random() * 20 + "px";
      confetti.style.color = ["#ff4d6d","#ffb6c1","#fff","#ff69b4"][Math.floor(Math.random()*4)];
      confetti.style.animation = `confettiFall ${3 + Math.random()*3}s linear forwards`;
      document.body.appendChild(confetti);
      setTimeout(() => confetti.remove(), 6000);
    }
  }

  setInterval(() => {
    const heart = document.createElement("div");
    heart.className = "heart";
    heart.innerHTML = "â¤";
    heart.style.left = Math.random() * 100 + "vw";
    heart.style.animationDuration = 4 + Math.random() * 3 + "s";
    document.body.appendChild(heart);
    setTimeout(() => heart.remove(), 7000);
  }, 300);
</script>

